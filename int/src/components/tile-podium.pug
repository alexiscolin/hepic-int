mixin tile-podium(brand, desc, gifts)
  article.o-tile.brad-4.shadbox-light
    .o-tile__infos--long.d-row-flex.d-flex-spacebet.d-flex-vm.p-1.pt-05.pb-05
      a(href="#").no-link.d-row-flex.d-flex-spacebet.d-flex-vm
        img(src="./assets/img/brands/nike/logo@2x.png" alt="logo").o-tile__logo--long.b-1.brad-100
        span.va-mid
          span.pl-1.f-stm.pr-05.f-bold= brand
          span.f-cap.f-stl.f-lgrey.f-reg= desc
        
      a(href="#").no-link
        span.o-more
        
    .o-tile__pictures
      a(href="#").p-rel
        img(src="./assets/img/brands/nike/nike-femme.jpg", alt="")
        .o-ico-sprite.o-ico-sprite--or
      a(href="#").p-rel
        img(src="./assets/img/brands/nike/nike-blanc.jpg", alt="")
        .o-ico-sprite.o-ico-sprite--argent
      a(href="#").p-rel
        img(src="./assets/img/brands/nike/nike-course.jpg", alt="")
        .o-ico-sprite.o-ico-sprite--bronze

    .o-tile__infos--long.p-1.pt-05.pb-05.f-left
      span.f-light.f-lgrey.f-sxs= gifts
